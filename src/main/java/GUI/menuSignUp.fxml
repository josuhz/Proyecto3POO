<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-width: 2;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.controladorSignUp">
    <children>
        <!-- Título -->
        <Text layoutX="150.0" layoutY="40.0" style="-fx-font-weight: bold;" text="Registro de Usuario">
            <font>
                <Font size="20.0" />
            </font>
        </Text>

        <!-- Campos del formulario -->
        <Label layoutX="50.0" layoutY="80.0" text="Nombre Completo:" />
        <TextField fx:id="txtNombre" layoutX="50.0" layoutY="100.0" prefHeight="30.0" prefWidth="400.0" promptText="Ingrese su nombre completo" />

        <Label layoutX="50.0" layoutY="140.0" text="Correo Electrónico:" />
        <TextField fx:id="txtCorreo" layoutX="50.0" layoutY="160.0" prefHeight="30.0" prefWidth="400.0" promptText="Ingrese su correo" />

        <Label layoutX="50.0" layoutY="200.0" text="Contraseña:" />
        <TextField fx:id="txtContrasena" layoutX="50.0" layoutY="220.0" prefHeight="30.0" prefWidth="400.0" promptText="Cree una contraseña" />

        <Label layoutX="50.0" layoutY="260.0" text="Edad:" />
        <TextField fx:id="txtEdad" layoutX="50.0" layoutY="280.0" prefHeight="30.0" prefWidth="190.0" promptText="Edad" />

        <Label layoutX="260.0" layoutY="260.0" text="Peso (kg):" />
        <TextField fx:id="txtPeso" layoutX="260.0" layoutY="280.0" prefHeight="30.0" prefWidth="190.0" promptText="Peso en kg" />

        <Label layoutX="50.0" layoutY="320.0" text="Altura (cm):" />
        <TextField fx:id="txtAltura" layoutX="50.0" layoutY="340.0" prefHeight="30.0" prefWidth="190.0" promptText="Altura en cm" />

        <!-- Botón Registrar -->
        <Button fx:id="btnRegistrar" layoutX="200.0" layoutY="380.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;" text="Registrar" />
    </children>
</AnchorPane>